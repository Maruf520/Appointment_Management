@model DoctorRegisterViewModel
<div class="right_col" role="main" style="margin-top:-50%">
    <div class="">
        <div class="x_panel">
            <div class="x_title">
                <h2>Patient <small>Regstration form elements</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="" method="post" asp-controller="Doctor" asp-action="Edit">

                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Doctor.Name">
                            Name
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="@Model.Doctor.Name" type="text" required="required" class="form-control ">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Doctor.SpecializationId">
                            Specilization <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">

                            <select asp-for="@Model.Doctor.SpecializationId" asp-items="@Model.SpecializationList" class="form-control">
                                <option>--Please select one--</option>
                            </select>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="@Model.Doctor.Address" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                        <div class="col-md-6 col-sm-6 ">
                            <input class="form-control" asp-for="@Model.Doctor.Address" class="form-control " type="text" required='required'>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label asp-for="@Model.Doctor.Phone" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                        <div class="col-md-6 col-sm-6 ">
                            <input asp-for="@Model.Doctor.Phone" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

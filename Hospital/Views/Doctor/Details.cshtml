@model doctorDetails

<div class="content-wrapper">
    <section class="content" style="margin-top:-77%">
        <div class="box ">
            <div class="box-header with-border">
                <h3 class="box-title"> Doctor Details </h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <div class="card" style="width: 50rem; margin-left:30%;">
                <div class="card-body">
                    <h5 class="card-title">Name :  @Model.Doctor.Name</h5>

                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Address : @Model.Doctor.Phone</li>
                    <li class="list-group-item">
                        Specialization :
                        <ul class="list-group-item">
                            @{
                                @foreach (var item in ViewBag.specialization)
                                {

                                    @item.specializationName

                                }
                            }
                        </ul>
                    </li>
                    <li class="list-group-item">
                        Address :

                        @{
                            @if (Model.Doctor.IsAvailable == true)
                            {
                                <a asp-controller="Doctor" asp-action="DoctorAvailability" asp-route-id="@Model.Doctor.Id" class="btn btn-primary"><i class="fa fa-marker fa-lg"></i>Available</a>
                            }
                            else
                            {
                                <a asp-controller="Doctor" asp-action="DoctorAvailability" asp-route-id="@Model.Doctor.Id" class="btn btn-danger"><i class="fa fa-marker fa-lg"></i>Unavailable</a>
                            }
                        }

                    </li>



                </ul>

            </div>
 
        </div>

    </section>
</div>
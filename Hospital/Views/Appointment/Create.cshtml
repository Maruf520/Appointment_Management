@model AppointmentFormViewModel
<div class="content-wrapper">
    <section class="content" style="margin-top:-77%">

        <!-- SELECT2 EXAMPLE -->
        <form asp-action="Create" asp-controller="Appointment" method="post">
            <div class="box ">
                <div class="box-header with-border">
                    <h3 class="box-title">Register Patient </h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                        <input type="hidden" asp-for="@Model.Patient" />
                            <div class="form-group">
                                <label>Available Doctors</label>
                                <select asp-for="@Model.Doctor" asp-items="@Model.DoctorList" class="form-control select2">
                                    <option>--Please select one--</option>
                                </select>
                            </div>

                        </div><!-- /.col -->

                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Date</label>
                                <input asp-for="@Model.Date" type="date" class="form-control select2" />
                            </div>
                            <div class="form-group">
                                <label>Time</label>
                                <input asp-for="@Model.Date" type="time" class="form-control select2" />
                            </div>

                            <div class="form-group">
                                <label>Details</label>
                                <input asp-for="@Model.Detail" type="text" class="form-control select2" />
                            </div>

                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.box-body -->
                <div class="item form-group">
                    <div class="col-md-6 col-sm-6 offset-md-3">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </div><!-- /.box -->
        </form>



    </section>
</div>
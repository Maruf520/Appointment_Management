                <label asp-for="@Model.patient.Weight" class="control-label"></label>
                <input asp-for="@Model.patient.Weight" class="form-control" />
                <span asp-validation-for="@Model.patient.Weight" class="text-danger"></span>
            </div>            <div class="form-group">

            <div class="form-group">
                <label asp-for="@Model.patient.BirthDate" class="control-label"></label>
                <input asp-for="@Model.patient.BirthDate" class="form-control" />
                <span asp-validation-for="@Model.patient.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.patient.Phone" class="control-label"></label>
                <input asp-for="@Model.patient.Phone" class="form-control" />
                <span asp-validation-for="@Model.patient.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.patient.Address" class="control-label"></label>
                <input asp-for="@Model.patient.Address" class="form-control" />
                <span asp-validation-for="@Model.patient.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.patient.Height" class="control-label"></label>
                <input asp-for="@Model.patient.Height" class="form-control" />
                <span asp-validation-for="@Model.patient.Height" class="text-danger"></span>
            </div>

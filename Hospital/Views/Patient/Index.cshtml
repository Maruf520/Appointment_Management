@model PatientViewModel

<div class="content-wrapper">
    <section class="content" style="margin-top:-77%">

        <!-- Default box -->

        <div class="box" >
            <div class="box-header with-border" >
                <h3 class="box-title">All Patients</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>

                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                              
                                <div class="box-tools">
                                    <div class="input-group" style="width: 150px;">
                                        <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search" />
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div><!-- /.box-header -->
                            <div class="box-body table-responsive no-padding">
                                <table class="table table-hover">
                                    <tr>
                                        <th>Token</th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Phone</th>
                                        <th>Action</th>
                                    </tr>
                                    @foreach (var item in @Model.Patients)
                            {
                                    <tr>
                                        <th scope="row">@item.Token</th>

                                        <td>@item.Name</td>
                                        <td>@item.Gender.GenderName</td>
                                        <td>@item.Phone</td>
                                        <td>
                                            <a  asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa fa-marker fa-lg"></i>Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark"><i class="far fa-file-alt fa-lg"></i>Details</a>

                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="far fa-trash-alt fa-lg"></i>Delete</a>

                                        </td>
                                    </tr>
                                    }
                                </table>
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </div>

            </div>
        </div>
        <!-- /.box -->
       
    </section>
    </div>
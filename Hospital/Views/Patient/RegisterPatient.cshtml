@model PatientRegisterViewModel
<div class="content-wrapper">
    <section class="content" style="margin-top:-81%">

        <!-- SELECT2 EXAMPLE -->
        <form asp-action="RegisterPatient" asp-controller="Patient">
            <div class="box ">
                <div class="box-header with-border">
                    <h3 class="box-title">Register Patient </h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        <button class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                    </div>
                </div><!-- /.box-header -->

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" asp-for="@Model.patient.Name" class="form-control select2" />
                            </div><!-- /.form-group -->
                            <div class="form-group">
                                <label>Date Of Birth</label>
                                <input type="date" asp-for="@Model.patient.BirthDate" class="form-control select2" />
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" asp-for="@Model.patient.Phone" class="form-control select2" />
                            </div>
                            <div class="form-group">
                                <label>Height</label>
                                <input type="text" asp-for="@Model.patient.Height" class="form-control select2" />
                            </div>

                        </div><!-- /.col -->

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Gender</label>
                                <select asp-for="@Model.patient.gender"  asp-items="@ViewBag.gender" class="form-control select2">
                                    <option>--Please select one--</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" asp-for="@Model.patient.Address" class="form-control select2" />
                            </div>
                            <div class="form-group">
                                <label>Weight</label>
                                <input type="text" asp-for="@Model.patient.Weight" class="form-control select2" />
                            </div>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.box-body -->
                <div class="item form-group">
                    <div class="col-md-6 col-sm-6 offset-md-3">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </div><!-- /.box -->
        </form>



    </section>
</div>
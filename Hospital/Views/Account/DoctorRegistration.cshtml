@model DoctorFormViewModel



<h1>DoctorRegistration</h1>

<h4>DoctorFormViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoctorRegistration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.registerViewModel.Email" class="control-label"></label>
                <input asp-for="@Model.registerViewModel.Email" class="form-control" />
                <span asp-validation-for="@Model.registerViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Specialization" class=" control-label"></label>

                <select asp-for="Specialization" asp-items="@Model.SpecializationList" class="form-control">
                    <option>--Please select one--</option>
                </select>
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.registerViewModel.Password" class="control-label"></label>
                <input asp-for="@Model.registerViewModel.Password" type="Password" class="form-control" />
                <span asp-validation-for="@Model.registerViewModel.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

